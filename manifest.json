{
  "manifest_version": 3,
  "name": "GuíasCR - Shopify",
  "version": "1.0.0",
  "description": "Crea guías de entrega de forma automáticamente para tus pedidos de Shopify",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://sucursal.correos.go.cr/*",
    "https://*.myshopify.com/*",
    "https://guiascr-backend-production.up.railway.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "GuíasCR"
  },
  "content_scripts": [
    {
      "matches": [
        "https://sucursal.correos.go.cr/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}